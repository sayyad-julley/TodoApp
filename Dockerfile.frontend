# Dockerfile for Frontend Development
# Using GitHub Container Registry to avoid Docker Hub rate limits
FROM ghcr.io/docker-library/node:18-alpine

WORKDIR /app

# Install dependencies
COPY golden-path/templates/fullstack-todo/frontend/package*.json ./
RUN npm ci

# Copy source code
COPY golden-path/templates/fullstack-todo/frontend/ ./

# Expose Vite dev server port
EXPOSE 5173

# Start development server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0", "--port", "5173"]

