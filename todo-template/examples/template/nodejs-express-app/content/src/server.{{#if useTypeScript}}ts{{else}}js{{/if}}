import express from 'express';
import helmet from 'helmet';
import morgan from 'morgan';
import compression from 'compression';
import dotenv from 'dotenv';
{{#if enableCors}}
import cors from 'cors';
{{/if}}
{{#if enableRateLimit}}
import rateLimit from 'express-rate-limit';
{{/if}}
{{#if enableSwagger}}
import swaggerJsdoc from 'swagger-jsdoc';
import swaggerUi from 'swagger-ui-express';
{{/if}}

// Import routes
import apiRoutes from './routes/api';
{{#if enableAuth}}
import authRoutes from './routes/auth';
{{/if}}

// Load environment variables
dotenv.config();

const app = express();
const PORT = process.env.PORT || {{ port }};

// Security middleware
app.use(helmet());

{{#if enableCors}}
// CORS middleware
app.use(cors({
  origin: process.env.CORS_ORIGIN || '*',
  credentials: true,
}));
{{/if}}

{{#if enableRateLimit}}
// Rate limiting
const limiter = rateLimit({
  windowMs: 15 * 60 * 1000, // 15 minutes
  max: 100, // limit each IP to 100 requests per windowMs
  message: 'Too many requests from this IP, please try again later.',
});
app.use('/api/', limiter);
{{/if}}

// General middleware
app.use(compression());
app.use(morgan('combined'));
app.use(express.json({ limit: '10mb' }));
app.use(express.urlencoded({ extended: true, limit: '10mb' }));

{{#if enableSwagger}}
// Swagger configuration
const swaggerOptions = {
  definition: {
    openapi: '3.0.0',
    info: {
      title: '{{ __APP_NAME__ }} API',
      version: '1.0.0',
      description: '{{ description }}',
    },
    servers: [
      {
        url: `http://localhost:${PORT}/${{ apiVersion }}`,
        description: 'Development server',
      },
    ],
  },
  apis: ['./src/routes/*.{{#if useTypeScript}}ts{{else}}js{{/if}}'],
};

const specs = swaggerJsdoc(swaggerOptions);
app.use('/api-docs', swaggerUi.serve, swaggerUi.setup(specs));
{{/if}}

// Health check endpoint
app.get('/health', (req, res) => {
  res.status(200).json({
    status: 'OK',
    timestamp: new Date().toISOString(),
    uptime: process.uptime(),
    environment: process.env.NODE_ENV || 'development',
    version: process.env.npm_package_version || '1.0.0',
  });
});

// API routes
app.get('/', (req, res) => {
  res.json({
    message: 'Welcome to {{ __APP_NAME__ }} API',
    version: '{{ apiVersion }}',
    documentation: '{{#if enableSwagger}}/api-docs{{else}}Contact the API team for documentation{{/if}}',
  });
});

// API routes
app.use(`/${{ apiVersion }}`, apiRoutes);
{{#if enableAuth}}
app.use(`/${{ apiVersion }}/auth`, authRoutes);
{{/if}}

// 404 handler
app.use('*', (req, res) => {
  res.status(404).json({
    error: 'Not Found',
    message: `Route ${req.originalUrl} not found`,
  });
});

// Global error handler
app.use((err, req, res, next) => {
  console.error(err.stack);
  res.status(err.status || 500).json({
    error: 'Internal Server Error',
    message: process.env.NODE_ENV === 'development' ? err.message : 'Something went wrong',
    ...(process.env.NODE_ENV === 'development' && { stack: err.stack }),
  });
});

// Start server
app.listen(PORT, () => {
  console.log(`ğŸš€ Server running on port ${PORT}`);
  console.log(`ğŸ“ API endpoint: http://localhost:${PORT}/${{ apiVersion }}`);
  {{#if enableSwagger}}
  console.log(`ğŸ“š API documentation: http://localhost:${PORT}/api-docs`);
  {{/if}}
  console.log(`ğŸ¥ Health check: http://localhost:${PORT}/health`);
});

export default app;