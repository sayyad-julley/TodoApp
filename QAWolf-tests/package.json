{
  "name": "qawolf-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Todo App using QA Wolf",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:record": "playwright codegen --target=playwright-test http://localhost:5173 -o tests/test.spec.js",
    "test:report": "playwright show-report playwright-report",
    "qawolf:create": "playwright codegen --target=playwright-test http://localhost:5173 -o tests/test.spec.js",
    "install-browsers": "playwright install"
  },
  "keywords": [
    "e2e",
    "testing",
    "qawolf",
    "playwright"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@qawolf/cli": "^0.9.3",
    "playwright": "^1.56.1"
  }
}
